<ion-content>
  <ion-list>
    <ion-list-header no-lines text-center class="pt15">
      <img [src]="icons.logo" width="109"/>
    </ion-list-header>
    <ion-card no-lines>
      <ion-list no-lines>
        <ion-item>
        <ion-label (click)="langChange($event)">
          <ion-label stacked>{{translation?.language}}</ion-label>
          <ion-icon name="arrow-down" class="fr pt10 pr10"></ion-icon>
          <div class="bg-white pt10 pb10">
            <ion-note padding-left>{{langName}}</ion-note>
          </div>
        </ion-label>
        </ion-item>
        <ion-item>
          <ion-label stacked>{{translation?.username}}</ion-label>
          <ion-input class="bg-white pl10" type="text" [(ngModel)]="user.username"></ion-input>
        </ion-item>
        <ion-item>
          <ion-label stacked>{{translation?.password}}</ion-label>
          <ion-input class="bg-white pl10" type="password" [(ngModel)]="user.password"></ion-input>
        </ion-item>
        <ion-item no-lines>
          <ion-label>{{translation?.remember}}</ion-label>
          <ion-checkbox color="primary" [(ngModel)]="user.remember"></ion-checkbox>
        </ion-item>
      </ion-list>
    </ion-card>
    <ion-item no-lines class="mb0">
      <button ion-button block default (click)="gotoCompany()">{{translation?.login}}</button>
    </ion-item>
    <p class="feedback" *ngIf="feedback.show">   
       {{feedback?.msg}}
    </p>
    <ion-item text-right no-lines>
      <button ion-button outline (click)="gotoServer()">{{translation?.serverConfig}}</button>
    </ion-item>
  </ion-list>
</ion-content>